{
  "name": "otto-schedule",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  },
  "scripts": {
    "dev": "next dev --port 3002",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3002 && electron .\"",
    "electron:build": "pnpm build && node scripts/prepare-standalone.js && electron-builder --mac && cp -R .standalone-build/node_modules dist/mac-arm64/Otto\\ Schedule.app/Contents/Resources/standalone/ && cp -R .standalone-build/.next dist/mac-arm64/Otto\\ Schedule.app/Contents/Resources/standalone/",
    "electron:start": "electron ."
  },
  "build": {
    "appId": "com.otto.schedule",
    "productName": "Otto Schedule",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "public/app-icon.png",
      "target": [
        {
          "target": "dir",
          "arch": ["arm64"]
        }
      ]
    },
    "extraResources": [
      {
        "from": ".standalone-build",
        "to": "standalone",
        "filter": ["**/*"]
      }
    ],
    "asar": false
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
